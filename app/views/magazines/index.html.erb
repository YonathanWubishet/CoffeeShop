<h1>Magazines</h1>

<p class="boxhead"><%= link_to 'New magazine', new_magazine_path %></p> 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @magazines.each do |magazine| %>
    <tr>
      <td><%= magazine.name %></td>
      <td><%= magazine.description %></td>
      <td><%= link_to 'Show', magazine_path(magazine) %></td>
      <td><%= link_to 'Edit', edit_magazine_path(magazine) %></td>
                        <td><%= link_to 'Destroy', magazine_path(magazine),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              </td>
    </tr>
  <% end %>
</table>